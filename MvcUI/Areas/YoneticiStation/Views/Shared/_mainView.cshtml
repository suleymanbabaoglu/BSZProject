@using System.Web.Optimization;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="icon" href="@Url.Content("~/Contents/img/favicon.png")" sizes="32x32" type="image/png" />
    <title>Management Panel</title>
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    @Styles.Render("~/AdminCss")
    <link rel="stylesheet" href="~/Contents/AContent/bower_components/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/Contents/AContent/bower_components/Ionicons/css/ionicons.min.css" />



</head>
<body class="hold-transition skin-blue sidebar-mini">
    <!-- Site wrapper -->
    <div class="wrapper">

        @Html.Action("_Header", "Shared")
        <!-- =============================================== -->
        <!-- Left side column. contains the sidebar -->
        @Html.Action("_Sidebar", "Shared")
        <!-- =============================================== -->
        <!-- Content Wrapper. Contains page content -->
        @RenderBody()
        <!-- /.content-wrapper -->

        @Html.Partial("_Footer")

        <!-- Add the sidebar's background. This div must be placed
             immediately after the control sidebar -->
        <div class="control-sidebar-bg"></div>
    </div>
    <!-- ./wrapper -->

    @Scripts.Render("~/AdminJs")
    <script>
        $(document).ready(function () {
            $('.sidebar-menu').tree()
        })
    </script>
</body>
</html>
