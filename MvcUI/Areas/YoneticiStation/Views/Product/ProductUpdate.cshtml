
@{
    Layout = "~/Areas/YoneticiStation/Views/Shared/_mainView.cshtml";
}
@model MvcUI.Models.Entities.Products
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Product Updating Page
            <br />
            <small>You can update your products on this page.</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Products</a></li>
            <li class="active">Product Update</li>
        </ol>
    </section>
    <br />
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body table-responsive no-padding">
                    <div class="box">
                        <br />
                        @using (Html.BeginForm("ProductUpdate", "Product", FormMethod.Post, new
                        { enctype = "multipart/form-data", accept = "image/jpg, image/png" }))
                        {
                            <div class="col-xs-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.ProductBrand, "Product Brand")
                                    @Html.TextBoxFor(m => m.ProductBrand, new { @class = "form-control" })
                                    @Html.Hidden("id", Model.ProductID)
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.ProductText, "Product Text")
                                    @Html.TextBoxFor(m => m.ProductText, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.ProductBarcode, "Product Barcode")
                                    @Html.TextBoxFor(m => m.ProductBarcode, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.ProductInfo, "Product Info")
                                    @Html.TextBoxFor(m => m.ProductInfo, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-xs-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.ProductImage1, "Product Image1")
                                    @*@Html.TextBoxFor(m => m.ProductImage1, new { type="file" ,@class = "form-control" })*@
                                    <input type="file" name="image1"/>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.ProductImage2, "Product Image2")
                                    @*@Html.TextBoxFor(m => m.ProductImage2, new { type = "file", @class = "form-control" })*@
                                    <input type="file" name="image2"/>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.ProductImage3, "Product Image3")
                                    @*@Html.TextBoxFor(m => m.ProductImage3, new { type = "file", @class = "form-control" })*@
                                    <input type="file" name="image3"/>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.ProductImage4, "Product Image4")
                                    @*@Html.TextBoxFor(m => m.ProductImage4, new { type = "file", @class = "form-control" })*@
                                    <input type="file" name="image4"/>
                                </div>
                            </div>
                            <div class="box-footer col-xs-12">
                                <button type="submit" class="btn btn-primary">Update Product</button>
                                <a href="@Url.Content("~/YoneticiStation/Product")" class="btn btn-danger">Cancel</a>
                            </div>

                        }
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>

